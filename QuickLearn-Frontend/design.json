    "color_palette": {
      "primary_green": "#A8B896",
      "light_green": "#C9D7B8",
      "peach_background": "#FFD9A8",
      "first_place_green": "#6B7A5D",
      "second_place_brown": "#8B5A4E",
      "third_place_orange": "#D4923A",
      "white": "#FFFFFF",
      "dark_text": "#3D2817",
      "gray_text": "#666666",
      "gold_coin": "#FFB84D",
      "tree_brown": "#8B6F47",
      "positive_green": "#4CAF50",
      "positive_bg": "#E8F5E8",
      "negative_red": "#F44336",
      "negative_bg": "#FFEBEE"
    },
    
    "typography": {
      "font_family": "Inter, -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif",
      "font_weights": {
        "regular": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },
    
    "animations": {
      "list_item_hover": {
        "duration": "0.2s",
        "easing": "ease-in-out",
        "properties": ["transform", "border-color", "box-shadow"]
      },
      "avatar_load": {
        "duration": "0.3s",
        "easing": "ease-out",
        "effect": "fade-in with slight scale"
      },
      "rank_change_pulse": {
        "duration": "0.5s",
        "easing": "ease-in-out",
        "effect": "subtle pulse on positive changes"
      }
    },
    
    "accessibility": {
      "aria_labels": {
        "back_button": "Go back",
        "leaderboard": "User rankings leaderboard",
        "list_item": "User {name}, rank {rank}, {points} points, {change} rank change"
      },
      "keyboard_navigation": true,
      "focus_visible": {
        "outline": "2px solid #3D2817",
        "outline_offset": "2px"
      },
      "screen_reader": {
        "announce_rank_changes": true,
        "announce_current_user": true
      }
    },
    
    "interactions": {
      "mobile": {
        "scroll_behavior": "smooth",
        "pull_to_refresh": "optional",
        "list_item_tap": "show user profile or details"
      },
      "desktop": {
        "scroll_behavior": "smooth",
        "list_item_click": "show user profile or details",
        "hover_effects": "enabled"
      }
    }
  }